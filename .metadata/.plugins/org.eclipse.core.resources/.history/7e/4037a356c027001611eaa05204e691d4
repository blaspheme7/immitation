<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.BoardDao">
	<resultMap type="Board" id="BoardResultMap">
		<id column="PNO" property="no" />
		<result column="PNAME" property="title" />
		<result column="CONTENT" property="content" />
		<result column="STA_DATE" property="startDate" javaType="java.sql.Date" />
		<result column="END_DATE" property="endDate" javaType="java.sql.Date" />
		<result column="STATE" property="state" />
		<result column="CRE_DATE" property="createdDate" javaType="java.sql.Date" />
		<result column="TAGS" property="tags" />
	</resultMap>
	
	<select id="selectList" parameterType="map" resultMap="BoardResultMap">
		select no, name, title, cre_date, refnum from BOARD
		order by no desc
	</select>
	
	<insert id="insert" parameterType="Board">
		insert into BOARD(no, name, title, cre_date, refnum, content)
					values(#{no}, #{name}, #{title}, now(), #{refnum}, #{content})
	</insert>
	
	<select id="selectOne" parameterType="int" resultMap="BoardResultMap" >
		select PNO, PNAME, CONTENT, STA_DATE, END_DATE, STATE, CRE_DATE, TAGS from BOARD
		where PNO=#{value} 
	</select>
	
	<update id="update" parameterType="map">
		update BOARD
		<set>
			<if test="title!=null">PNAME=#{title},</if>
			<if test="content!=null">CONTENT=#{content},</if>
			<if test="startDate!=null">STA_DATE=#{startDate},</if>
			<if test="endDate!=null">END_DATE=#{endDate},</if>
			<if test="state!=null">STATE=#{state},</if>
			<if test="tags!=null">TAGS=#{tags}</if>
		</set>
		where PNO=#{no}
	</update>
	
	<delete id="delete" parameterType="int">
		delete from BOARD where PNO=#{value}
	</delete>
</mapper>