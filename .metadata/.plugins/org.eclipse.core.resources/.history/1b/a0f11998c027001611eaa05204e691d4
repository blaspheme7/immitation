<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.BoardDao">
	<resultMap type="Board" id="BoardResultMap">
		<id column="PNO" property="no" />
		<result column="PNAME" property="title" />
		<result column="CONTENT" property="content" />
		<result column="STA_DATE" property="startDate" javaType="java.sql.Date" />
		<result column="END_DATE" property="endDate" javaType="java.sql.Date" />
		<result column="STATE" property="state" />
		<result column="CRE_DATE" property="createdDate" javaType="java.sql.Date" />
		<result column="TAGS" property="tags" />
	</resultMap>
	
	<select id="selectList" parameterType="map" resultMap="BoardResultMap">
		select no, name, title, cre_date, refnum from BOARD
		order by no desc
	</select>
	
	<insert id="insert" parameterType="Board">
		insert into BOARD(no, name, title, cre_date, refnum, content)
					values(#{no}, #{name}, #{title}, now(), #{refnum}, #{content})
	</insert>
	
	<select id="selectOne" parameterType="int" resultMap="BoardResultMap" >
		select no, name, title, cre_date, refnum, content from BOARD
		where no=#{value} 
	</select>
	
	<update id="update" parameterType="map">
		update BOARD title=#{title}, CONTENT=#{content} where NO=#{no}
	</update>
	
	<delete id="delete" parameterType="int">
		delete from BOARD where NO=#{value}
	</delete>
</mapper>